{
  "packages": [
    "act@latest",
    "colima@latest",
    "nodejs@latest"
  ],
  "env": {
    "DOCKER_HOST": "unix://${HOME}/.colima/default/docker.sock"
  },
  "shell": {
    "init_hook": [
      "colima start &"
    ],
    "scripts": {
      "act": [
        "act -P ubuntu-latest=catthehacker/ubuntu:act-latest"
      ]
    }
  }
}
